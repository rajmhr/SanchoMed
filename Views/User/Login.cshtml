
@model FutsalGoal.Model.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Platform-x</title>
    <!-- Custom fonts for this template-->
    <link href="~/css/sb-admin/sb-admin-2.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    @if (ViewBag.Message != null)
    {
        <div class="row">
            <div class="alert alert-danger alert-dismissible fade show text-justify" role="alert">
                @if (ViewBag.Success == true)
                {
                    <strong>Congratulation!! </strong> @ViewBag.Message
                }
                else
                {
                    <strong> Oops !! </strong> @ViewBag.Message
                }
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            <form class="user" asp-controller="User" asp-action="Login">
                                <div class="form-group">
                                    <input asp-for="EmailId" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="Enter Email Address..." />
                                    <span asp-validation-for="EmailId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-user" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Remember Me</label>
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Login" />
                            </form>
                            <hr>
                            <div class="text-center">
                                <a asp-action="ForgetPassword" asp-controller="User" class="small">Forgot Password?</a>
                            </div>
                            @*<div class="text-center">
                                    <a asp-action="Register" asp-controller="User" class="small">Create an account!</a>
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<environment include="Development">
    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <!-- Custom scripts for all pages-->
</environment>
<environment include="Production, Staging">
    <script src="~/js/Bundle/lib-app-main.min.js"></script>
</environment>

