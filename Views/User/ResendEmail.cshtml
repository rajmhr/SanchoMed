
@{
    ViewData["Title"] = "Resend Email";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    .row {
        margin-top: 200px;
    }
</style>

<div class="row col-xs-4 col-md-offset-4" ">
    <div class="panel panel-primary">
        <div id="msg"></div>
        <div class="panel-heading"> Resend email </div>
        <div class="panel-body">
            <div class="form-group">
                <label class="col-form-label col-xs-2">Email Id </label>
                <div class="col-xs-6">
                    <input type="email" id="emailId" class="form-control" />
                </div>
                <input type="button" class="btn btn-success" value="Resend Email" onclick="resendEmail()" />
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){

    });
    function resendEmail(){
            $.ajax({
                type:'Post',
                url: '/User/SendActivateEmail',
                data: {emailId : $('#emailId').val()},
                 success: function(data){
                        ShowMessageLogin(data.success, data.message);
                }
            });
    }
</script>