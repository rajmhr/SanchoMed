@model FutsalGoal.Model.Models.ConfigChoiceCategoryModel

<div class="modal-dialog text-medium">
    <form asp-controller="ConfigChoiceCategory" asp-action="SaveConfigChoiceCategory" id="frmAddEditCategory" data-ajax="true" data-ajax-method="POST" data-ajax-success="onSaveCategorySuccess" data-ajax-begin="onConfigCategoryBegin">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white p-2">
                <h6 class="modal-title w-100 text-center">
                    @if (Model != null && Model.ConfigChoiceCategoryId != 0)
                    {
                        <text>Update category information !!</text>
                    }
                    else
                    {
                        <text>Add category information !!</text>
                    }
                </h6>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
            </div>
            <div class="modal-body">

                @Html.HiddenFor(a => a.ConfigChoiceCategoryId)
                <div class="card shadow">
                    <div class="card-body">

                        <div class="row form-group">
                            <label class="col-sm-12 col-md-3 col-form-label">Category</label>
                            <div class="col-md-6 col-sm-12">
                                <input asp-for="Category" class="form-control text-small" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                                @Html.ValidationMessageFor(a => a.Category, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 col-form-label">Description</label>
                            <div class="col-md-9">
                                <textarea asp-for="Description" rows="5" class="form-control text-small"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 col-form-label">System Choice</label>
                            <div class="col-md-6">
                                <input asp-for="IsSystemChoice" class="form-check-input" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col">
                        <div class="float-right">
                            <button class="btn btn-sm btn-danger" data-dismiss="modal"><i class="fas fa-fw fa-times mr-1"></i>Cancel</button>
                            <button class="btn btn-sm btn-primary" type="submit" id="submit"><i class="fas fa-fw fa-save mr-1"></i> Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        onConfigCategoryBegin();
    });
</script>
